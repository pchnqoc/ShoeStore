@model List<WebsiteGiay.Models.SanPhamInfo>

@foreach (var sp in Model)
{
    <div class="col-lg-3 col-md-4 col-sm-6 product-card">
        <div class="card h-100 shadow-sm product-item">
            <div class="position-relative">
                @if (sp.GiaSauGiam.HasValue && sp.PhanTramGiam.HasValue)
                {
                    <span class="badge bg-danger position-absolute top-0 start-0 m-2">
                        -@sp.PhanTramGiam.Value%
                    </span>
                }
                <div class="product-image-wrapper">
                    @if (!string.IsNullOrEmpty(sp.HinhAnh))
                    {
                        <img src="@sp.HinhAnh" class="card-img-top product-image" alt="@sp.TenSanPham">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                            <i class="bi bi-image fs-1 text-muted"></i>
                        </div>
                    }
                    <div class="product-overlay">
                        <button class="btn btn-primary btn-sm me-2" onclick="xemChiTiet(@sp.MaSanPham)">
                            <i class="bi bi-eye"></i> Xem
                        </button>
                        <button class="btn btn-success btn-sm"
                                @(sp.ConHang ? "" : "disabled")
                                data-product-id="@sp.MaSanPham"
                                data-bienthe="@sp.DefaultBienTheId"
                                data-size="@sp.DefaultSize"
                                data-color="@sp.DefaultColor"
                                onclick="@(sp.ConHang ? "quickAddToCart(this)" : "return false;")">
                            <i class="bi bi-cart-plus"></i> @(sp.ConHang ? "Thêm" : "Hết hàng")
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <h6 class="card-title fw-bold">@sp.TenSanPham</h6>
                <p class="text-muted small mb-2">@sp.TenThuongHieu</p>
                @if (sp.DiemTrungBinh.HasValue)
                {
                    <div class="mb-2">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="bi bi-star@(i <= Math.Round(sp.DiemTrungBinh.Value) ? "-fill" : "") text-warning"></i>
                        }
                        <span class="small text-muted ms-1">(@sp.SoLuongDanhGia)</span>
                    </div>
                }
                <div class="price-section">
                    @if (sp.GiaSauGiam.HasValue)
                    {
                        <span class="text-decoration-line-through text-muted small me-2">@sp.Gia.ToString("N0") đ</span>
                        <span class="fw-bold text-danger fs-5">@sp.GiaSauGiam.Value.ToString("N0") đ</span>
                    }
                    else
                    {
                        <span class="fw-bold text-primary fs-5">@sp.Gia.ToString("N0") đ</span>
                    }
                </div>
            </div>
        </div>
    </div>
}

